<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Bottom sheet corner style -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="materialButtonStyle">@style/DefaultMaterialButtonStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <!--        <item name="android:background">@drawable/layout_corner_top_white</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="backgroundTint">@null</item>-->
        <!--        <item name="android:background">@drawable/background_ripple_corner_gradient</item>-->
    </style>

    <!-- Tab style -->
    <style name="TabCornerStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tab_background_corner_24</item>
        <item name="tabIndicator">@null</item>
    </style>


    <!-- Tab title style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
