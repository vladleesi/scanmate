<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ru.vladleesi.ultimatescanner.ui.view.BarcodeOverlay
        android:id="@+id/bo_barcode_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_close_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/background_image_view_button"
        android:padding="@dimen/margin_12"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/fab_open_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@drawable/background_image_view_button"
        android:padding="@dimen/margin_12"
        android:src="@drawable/ic_baseline_settings_24"
        app:tint="@color/white" />

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <!--        android:id="@+id/fab_open_settings"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="bottom|start"-->
    <!--        android:layout_marginStart="@dimen/margin_16"-->
    <!--        android:layout_marginBottom="@dimen/margin_16"-->
    <!--        android:outlineProvider="none"-->
    <!--        android:src="@drawable/ic_baseline_settings_24_white"-->
    <!--        app:backgroundTint="@android:color/transparent"-->
    <!--        app:tint="@color/white" />-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_16"
        android:src="@drawable/ic_baseline_image_search_24"
        app:backgroundTint="@color/teal_700"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_open_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:outlineProvider="none"
        android:src="@drawable/ic_baseline_history_24"
        app:backgroundTint="@android:color/transparent"
        app:tint="@color/white" />

</FrameLayout>